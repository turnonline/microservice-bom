<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.ctoolkit.maven</groupId>
        <artifactId>ctoolkit-parent</artifactId>
        <version>2</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>ctoolkit-bom</artifactId>
    <version>1.9.36-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>CToolkiT dependency baseline - BOM</name>
    <description>
        CToolkiT dependency baseline.
        Bill of Materials - keeps track of dependency versions and ensures that all works well together on Google AppEngine.
    </description>
    <url>https://github.com/turnonline/ctoolkit-bom</url>

    <scm>
        <connection>scm:git:[fetch=]git@github.com:turnonline/ctoolkit-bom.git</connection>
        <developerConnection>scm:git:[push=]git@github.com:turnonline/ctoolkit-bom.git</developerConnection>
        <url>https://github.com/turnonline/ctoolkit-bom</url>
        <tag>HEAD</tag>
    </scm>

    <issueManagement>
        <url>https://github.com/turnonline/ctoolkit-bom/issues</url>
    </issueManagement>

    <developers>
        <developer>
            <name>Aurel Medvegy</name>
            <id>medvegy</id>
            <email>aurel.medvegy@ctoolkit.org</email>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.google.appengine</groupId>
                    <artifactId>appengine-maven-plugin</artifactId>
                    <version>1.9.36</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <!-- Use here only release version of dependency -->
    <dependencyManagement>
        <dependencies>
            <!-- AppEngine Servlet API -->
            <dependency>
                <groupId>javax.servlet</groupId>
                <artifactId>servlet-api</artifactId>
                <version>2.5</version>
